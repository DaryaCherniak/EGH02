@using EGH01DB.Types;
@using EGH01.Core;
@using EGH01DB.Points;
@model List<AnchorPoint>
@{
    Menu menu = new Menu(
                            new Menu.MenuItem("Удалить", "AnchorPoint.Delete", true),
                            new Menu.MenuItem("Изменить", "AnchorPoint.Update", true)
                           );

}

<table id="main" class="border">
    <thead>
    <tr> <th rowspan="2"> Иден-тор </th>
     <th colspan="2"> Координаты </th>
        <th rowspan="2">  Кaтегория земли </th>
        <th colspan="3">  Геологические данные </th>
        <th rowspan="2">  Действие </th> </tr>
    <tr>
        <th> Широта и Долгота </th>
        <th>  В градусах </th>
      
        <th> Грунт</th>
        <th> Высота над уровнем моря(м)</th>
        <th>Глубина грунтовых вод(м) </th>

    </tr>

</thead>


    <tbody>
    @foreach (AnchorPoint t in @Model)
    {

        using (Html.BeginForm("AnchorPoint", "EGHRGE"))
        {
            <tr>

                    <td> @t.id.ToString()</td>

                    
                        <td>@t.coordinates.lat.d.ToString()°&nbsp;@t.coordinates.lat.m.ToString()'&nbsp;@t.coordinates.lat.s.ToString("0.00")"<br>
                        @t.coordinates.lng.d.ToString()°&nbsp;@t.coordinates.lng.m.ToString()'&nbsp;@t.coordinates.lng.s.ToString("0.00")" </td>
                        <td>@t.coordinates.latitude.ToString()°<br>@t.coordinates.lngitude.ToString()°</td>

                    
                    <td>@t.cadastretype.name</td>
                   
                        <td> @t.groundtype.name </td>
                        <td> @t.height.ToString()</td>
                        <td> @t.waterdeep.ToString() </td>
                   <td><button class="Удалить" title="Удалить" onclick='location="AnchorPoint?menuitem=AnchorPoint.Delete&type_code=@t.id.ToString()"' name='menuitem' value="AnchorPoint.Delete"> </button><button class="Изменить" title="Изменить" onclick='location="AnchorPoint?menuitem=AnchorPoint.Update&type_code=@t.id.ToString()"' name='menuitem' value="AnchorPoint.Update"></button>&nbsp;</td>

               </tr>
        }
    }
        </tbody>
</table>
<script>
$(document).ready(function() {
    $('#main').DataTable({
        "language":
datatables_lang, "pageLength":5

    } );
} );
</script>
