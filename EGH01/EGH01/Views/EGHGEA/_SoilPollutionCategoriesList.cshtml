@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Types;
@using EGH01DB.Objects;
@model List<SoilPollutionCategories>
@{
    Menu menu = new Menu(
                            new Menu.MenuItem("Удалить", "SoilPollutionCategories.Delete", true),
                            new Menu.MenuItem("Изменить", "SoilPollutionCategories.Update", true)
                           );
    }



<script>
    var dataSet = [];

</script>
@foreach (SoilPollutionCategories t in @Model)
{

    using (Html.BeginForm("SoilPollutionCategories", "EGHGEA"))
    {
        <script>
 dataSet.push( [
 ` @t.code.ToString() `,
 `@t.name`,
 `@t.min.ToString()&nbsp;-&nbsp;@t.max.ToString()&nbsp;`,
  `@t.cadastretype.name`,
 `<button onclick='location="SoilPollutionCategories?menuitem=SoilPollutionCategories.Delete&id=@t.code.ToString()"' name='menuitem' value="SoilPollutionCategories.Delete">Удалить </button><button onclick='location="SoilPollutionCategories?menuitem=SoilPollutionCategories.Update&id=@t.code.ToString()"' name='menuitem' value="SoilPollutionCategories.Update">Изменить </button>&nbsp`
   ] );
  </script>
    }
}

<script>
$(document).ready(function() {
    $('#main').DataTable({
        "language": 
datatables_lang,

        data: dataSet,
        columns: [
		//тут должны быть названия наших колонок для шапки
            { title: "Код" },
            { title: "Наименование" },
            { title: "Привышение ПДК(раз)" },
            { title: "Категория земли" },
            { title: "Действие" }

        ]
    } );
} );
</script>



<table style="width:100%" class="main border" id="main"></table>
